# Security keys (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
YT_APP_SECRET_KEY=your-secret-key-here
YT_TOKEN_ENC_KEY=your-32-byte-encryption-key-here

# Google OAuth (get from Google Cloud Console)
YT_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YT_GOOGLE_CLIENT_SECRET=your-client-secret
YT_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Database
YT_DATABASE_URL=sqlite+aiosqlite:///./dev.db
# For production: postgresql+asyncpg://user:pass@localhost/dbname

# Redis
YT_REDIS_URL=redis://localhost:6379/0

# Feed settings
YT_FEED_TTL_SECONDS=1800
YT_FEED_TTL_SPLAY_MAX=780
YT_SUBS_REFRESH_MINUTES=60
YT_INCLUDE_SHORTS=false

# Pagination
YT_PAGE_SIZE_DEFAULT=24
YT_PAGE_SIZE_MAX=60

# CORS
YT_FRONTEND_ORIGIN=http://localhost:5173

# Environment (dev or prod)
YT_ENV=dev
