# YouTube Feed Aggregator - Environment Configuration
# Copy this file to .env and fill in your actual values

# SECURITY: NEVER commit your actual .env file to version control!

# App Secret Key (used for JWT signing)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
YT_APP_SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY

# Token Encryption Key (must be exactly 32 bytes, base64 encoded)
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
YT_TOKEN_ENC_KEY=REPLACE_WITH_GENERATED_ENCRYPTION_KEY

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
YT_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YT_GOOGLE_CLIENT_SECRET=your-client-secret

# OAuth Redirect URI (must match Google Console configuration)
YT_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Database Configuration
# Development: sqlite+aiosqlite:///./dev.db
# Production: postgresql+asyncpg://user:pass@host:5432/dbname
YT_DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Redis Configuration
YT_REDIS_URL=redis://localhost:6379/0

# Environment (dev, staging, prod)
YT_ENV=dev

# Frontend Origin (for CORS)
# Development: http://localhost:5173
# Production: https://your-domain.com
YT_FRONTEND_ORIGIN=http://localhost:5173

# Mailgun Email Service (for transactional emails)
# Get these from: https://app.mailgun.com/app/sending/domains
# Note: Leave empty to disable email sending (useful for development)
YT_MAILGUN_API_KEY=your-mailgun-api-key
YT_MAILGUN_DOMAIN=mg.yourdomain.com
YT_MAILGUN_FROM_EMAIL=noreply@yourdomain.com
